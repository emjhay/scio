<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:background="#AA000000" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:background="@drawable/bg_dialog_popup"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/forgotEmailImgID"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/blank"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/forgotUsernameID"
                    style="@style/black_text"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/chat_fast_address_background"
                    android:ems="10"
                    android:hint="Admin Username"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_name_list" >

                    <requestFocus />
                </EditText>

                <!--
                     <Button
                    android:id="@+id/forgotUsernameCheckBtnID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:text="Check" />
                -->

                <TextView
                    android:id="@+id/forgotUsernameCheckBtnID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_check"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Check" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/forgotPersonalEmailID"
                    style="@style/black_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Your Personal Email"
                    android:textSize="@dimen/textsize_name_list" />

                <ImageView
                    android:id="@+id/icForgotImgEmailID"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/blank"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info_bad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/forgotPasswordID"
                    style="@style/black_text"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/chat_fast_address_background"
                    android:ems="10"
                    android:hint="Your Email Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_name_list" />

                <ImageView
                    android:id="@+id/icForgotImgPasswordID"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/blank"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info_bad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >

                <!--
                <Button
                    android:id="@+id/forgotCancelID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/forgotSendID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:text="SEND" />
                -->

                <TextView
                    android:id="@+id/forgotCancelID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cancel"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Cancel" />

                <TextView
                    android:id="@+id/forgotSendID"
                    style="@style/white_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_send"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Send" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>