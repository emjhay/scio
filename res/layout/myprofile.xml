<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include layout="@layout/bar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@drawable/bg_round"
                android:orientation="vertical"
                android:padding="1dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_top_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="User Type"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/userTypeTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Admin"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="First Name"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/firstNameTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Eduardo"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Last Name"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lastNameTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Delito"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Username"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/userNameTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="eduardo"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Password"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/passwordTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="123456"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Email"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/emailTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="eduardo.delito@gmail.com"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bottom_round"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/blue_gray_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Phone Number"
                        android:textSize="@dimen/textsize_name_list" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#878686"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneNumberTextID"
                        style="@style/black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="123456789"
                        android:textSize="@dimen/textsize_name_list" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.9"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>